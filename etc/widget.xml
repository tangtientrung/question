<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="question_slider" class="AHT\Question\Block\Widget\Widget" is_email_compatible="false" >
        <label translate="true">Question slider</label>
        <description translate="true">List of Question</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="true" visible="true">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="widget/list.phtml" selected="true">
                        <label translate="true">Question list slider</label>
                    </option>
                </options>
            </parameter>
            <parameter name="show" xsi:type="text" required="true" visible="true">
                <label translate="true">Number question to show</label>
            </parameter>
            <parameter name="slide" xsi:type="text" required="true" visible="true">
                <label translate="true">Number question to slide</label>
            </parameter>
        </parameters>
    </widget>
</widgets>